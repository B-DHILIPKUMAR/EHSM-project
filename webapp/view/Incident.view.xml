<mvc:View controllerName="ehsm.controller.Incident"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">
    <Page id="incidentPage" title="Incident Management" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <Table id="incidentTable" items="{incident>/results}" growing="true" growingThreshold="10">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Incidents"/>
                        <ToolbarSpacer/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="Incident ID"/></Column>
                    <Column><Text text="Plant"/></Column>
                    <Column><Text text="Description"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Category"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Priority"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Status"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Date/Time"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Completion Date"/></Column>
                    <Column minScreenWidth="Tablet" demandPopin="true"><Text text="Created By"/></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{incident>IncidentId}"/>
                            <Text text="{incident>Plant}"/>
                            <Text text="{incident>IncidentDescription}"/>
                            <Text text="{incident>IncidentCategory}"/>
                            <Text text="{incident>IncidentPriority}"/>
                            <ObjectStatus text="{incident>IncidentStatus}" state="{path: 'incident>IncidentStatus', formatter: '.formatter.statusState'}"/>
                            <VBox>
                                <Text text="{path: 'incident>IncidentDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd.MM.yyyy' }}"/>
                                <Text text="{path: 'incident>IncidentTime', type: 'sap.ui.model.type.Time', formatOptions: { pattern: 'HH:mm:ss' }}"/>
                            </VBox>
                            <Text text="{path: 'incident>CompletionDate', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd.MM.yyyy' }}"/>
                            <Text text="{incident>CreatedBy}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
